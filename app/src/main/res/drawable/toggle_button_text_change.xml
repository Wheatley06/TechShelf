<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Включенное состояние (state_checked = true) -->
    <item android:state_checked="true" android:color="#FFFFFF"/>  <!-- Белый текст -->

    <!-- Выключенное состояние (state_checked = false) -->
    <item android:state_checked="false" android:color="#6A1B9A"/>  <!-- Темно-фиолетовый текст -->

    <!-- Состояние по умолчанию -->
    <item android:color="#6A1B9A"/>  <!-- Темно-фиолетовый текст по умолчанию -->
</selector>
