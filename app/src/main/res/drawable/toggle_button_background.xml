<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Включенное состояние (пастельный фиолетовый фон) -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#D1B3FF"/>  <!-- Пастельный фиолетовый -->
            <corners android:radius="12dp"/>
            <stroke android:width="2dp" android:color="#B39DDB"/>  <!-- Темнее для обводки -->
        </shape>
    </item>

    <!-- Выключенное состояние (белый фон с фиолетовой обводкой) -->
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/>  <!-- Белый фон -->
            <corners android:radius="12dp"/>
            <stroke android:width="2dp" android:color="#D1B3FF"/>  <!-- Светлая фиолетовая обводка -->
        </shape>
    </item>

    <!-- Состояние по умолчанию -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/>
            <corners android:radius="12dp"/>
            <stroke android:width="2dp" android:color="#D1B3FF"/>
        </shape>
    </item>
</selector>